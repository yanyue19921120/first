<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20CCCCCC" >
    


    <RelativeLayout
        android:id="@+id/setting_titile_bar"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#00CCFF" >

        <RelativeLayout
            android:id="@+id/relativelayout_back_button"
            android:layout_height="match_parent"
            android:layout_width="30dip"
            android:background="@drawable/back_button_background"
            android:clickable="true"
            >
            <ImageView
                android:duplicateParentState="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:background="@drawable/back_button_normal" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设   置"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_change_number_setting_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/setting_titile_bar" >

        <TextView
            android:id="@+id/change_number_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="10dip"
            android:text="自动更换电话号码设置："

            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dip"
            android:layout_below="@+id/change_number_setting"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/layout_change_number_setting_one"
                android:layout_width="match_parent"
                android:layout_height="50dip" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="短信监听自动更换"
                    android:textSize="15sp" />
                
                 <!-- <CheckBox
                    android:id="@+id/checkbox_listen"
                    android:layout_width="40dip"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip" -->
                   
              <com.graduation.activity.SwitchButton
                  android:id="@+id/switchbutton"
                  android:layout_width="50dip"
                  android:layout_height="30dip"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="10dip" />
                 
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dip"
                android:layout_below="@+id/layout_change_number_setting_one" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="通知栏提示"
                    android:textSize="15sp" />

               <!-- <CheckBox
                    android:id="@+id/checkbox_show_notifaction"
                    android:layout_width="40dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip" /> -->
                
                <com.graduation.activity.SwitchButton
           
            android:id="@+id/switchbutton"
            android:layout_width="50dip"
            android:layout_height="30dip" 
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_change_number_setting_main" >

        <TextView
            android:id="@+id/permission_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="10dip"
            android:text="权限设置："
        
            android:textSize="10sp" />

        <RelativeLayout
            android:id="@+id/relativelayout_permission_setting_button"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_below="@+id/permission_setting"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="5dip"
            android:background="@drawable/menu_item_background"
            android:clickable="true" >

            <TextView
                android:id="@+id/textViewpermission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:duplicateParentState="true"
                android:text="打开权限设置界面"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout_login_out_button"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/menu_item_background"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:text="注销登陆"
            android:textColor="#ff0000"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>